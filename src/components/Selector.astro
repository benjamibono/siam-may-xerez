---
import { Image } from "astro:assets";
import entrenadores from "../images/entrenadores.webp";
import luchadores from "../images/luchadores.webp";

interface Category {
  title: string;
  foto: ImageMetadata;
  alt: string;
}

const categories: Category[] = [
  {
    title: "Entrenadores",
    foto: entrenadores,
    alt: "Entrenador dando instrucciones durante una clase",
  },
  {
    title: "Luchadores",
    foto: luchadores,
    alt: "Luchador practicando técnicas de Muay Thai",
  },
];
---

<div class="flex flex-col md:flex-row justify-center mt-8">
  {
    categories.map((category) => (
      <div class="w-full px-2 sm:px-0 sm:mx-4 my-1">
        <a
          href={`/${category.title.toLowerCase()}`}
          class="relative flex items-center justify-center text-white text-2xl font-bold rounded-lg uppercase"
          aria-label={`Ver sección de ${category.title.toLowerCase()}`}
        >
          <div class="overflow-hidden rounded-3xl">
            <Image
              src={category.foto}
              alt={category.alt}
              width={800}
              height={600}
              format="webp"
              quality={80}
              class="justify-center object-cover transform transition-transform duration-300 ease-in-out hover:scale-105"
            />
          </div>
          <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
            <h3>{category.title}</h3>
          </div>
        </a>
      </div>
    ))
  }
</div>
<style>
  a {
    cursor: url("/cursor.png"), auto;
  }
</style>
