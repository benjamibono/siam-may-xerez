---
import { Image } from "astro:assets";
import thai1 from "../images/thai1.webp";
import thai2 from "../images/thai2.webp";
import thai3 from "../images/thai3.webp";
import ej1 from "../images/ej1.webp";
import ej4 from "../images/ej4.webp";
import ej6 from "../images/ej6.webp";
import maythai from "../images/may-thai.webp";
import primos from "../images/primos.jpeg";
import primos2 from "../images/primos.webp";
import maymedel from "../images/may-medel.webp";
import mayardilla from "../images/may-ardilla.webp";

interface ImageData {
  src: ImageMetadata;
  alt: string;
  width: number;
  height: number;
  format: "webp";
  quality: number;
}

const images: ImageData[] = [
  {
    src: thai1,
    alt: "Entrenamiento de Muay Thai en el gimnasio",
    width: 800,
    height: 800,
    format: "webp",
    quality: 80,
  },
  {
    src: primos,
    alt: "Practicantes de Muay Thai en sesión de entrenamiento",
    width: 800,
    height: 800,
    format: "webp",
    quality: 80,
  },
  {
    src: thai3,
    alt: "Técnicas de Muay Thai en acción",
    width: 800,
    height: 800,
    format: "webp",
    quality: 80,
  },
  {
    src: mayardilla,
    alt: "Ejercicios funcionales en el gimnasio",
    width: 800,
    height: 800,
    format: "webp",
    quality: 80,
  },
  {
    src: maythai,
    alt: "Entrenamiento de fuerza y resistencia",
    width: 800,
    height: 800,
    format: "webp",
    quality: 80,
  },
  {
    src: maymedel,
    alt: "Sesión de acondicionamiento físico",
    width: 800,
    height: 800,
    format: "webp",
    quality: 80,
  },
];
---

<div class="mx-4 md:mx-8 lg:mx-16 xl:mx-24 my-8 md:my-16">
  <h3
    class="flex justify-center pb-6 md:pb-10 font-semibold text-2xl md:text-4xl lg:text-5xl text-balance text-center"
  >
    "La verdadera batalla está en superarte a ti mismo cada día"
  </h3>
  <div class="grid grid-cols-2 md:grid-cols-3 gap-2 md:gap-4 lg:gap-6">
    {
      images.map((image) => (
        <div class="overflow-hidden rounded-3xl aspect-square">
          <Image
            src={image.src}
            alt={image.alt}
            width={image.width}
            height={image.height}
            format={image.format}
            quality={image.quality}
            class="w-full h-full object-cover transform transition-transform duration-300 ease-in-out hover:scale-105"
          />
        </div>
      ))
    }
  </div>
</div>

<style>
  img {
    cursor: url("/cursor.png"), auto;
  }
</style>
