---
import Layout from "@/layouts/Layout.astro";
import Navbar from "@components/NavBar.astro";
import Footer from "@components/Footer.astro";
import { Image } from "astro:assets";
import may from "../images/may.webp";
import rocky from "../images/rocky.webp";

const entrenadores = [
  { nombre: "MAY", peso: "MUAY THAI", foto: may, link: "/may" },
  { nombre: "ROCKY", peso: "MMA", foto: rocky, link: "/rocky" },
];
---

<Layout title="Siam May Xerez | Gimnasio de Muay Thai y MMA en Jerez">
  <Navbar />
  <main class="flex-grow bg-gray-100">
    <section class="py-12 px-6">
      <div class="max-w-4xl mx-auto text-center mb-12">
        <h1
          class="text-2xl md:text-3xl lg:text-4xl font-bold text-gray-800 mb-4"
        >
          Nuestros Entrenadores
        </h1>
        <p class="text-gray-600 text-base md:text-lg text-balance">
          Conoce a nuestro equipo de entrenadores expertos, cada uno
          especializado en su disciplina. Su experiencia y dedicación te guiarán
          en tu camino hacia la excelencia en el Muay Thai y MMA.
        </p>
      </div>
      <div class="grid grid-cols-2 gap-2">
        {
          entrenadores.map((entrenador) => (
            <a
              href={entrenador.link}
              class="border border-gray-300 bg-white rounded-3xl pb-4 text-center block"
            >
              <Image
                src={entrenador.foto}
                alt={entrenador.nombre}
                width={800}
                height={800}
                format="webp"
                quality={80}
                class="w-full rounded-lg zoom pt-8"
              />
              <h3 class="mt-2 text-lg font-semibold">{entrenador.nombre}</h3>
              <p class="text-gray-600">{entrenador.peso}</p>
            </a>
          ))
        }
      </div>
    </section>
  </main>
  <Footer />
</Layout>
<style>
  img {
    filter: drop-shadow(0 0 10px rgba(0, 0, 0, 0.8));
  }
  /* 
  img:hover {
    transition: transform 0.3s ease;
    transform: scale(1.1);
  }
  */
  .zoom {
    transition: all 0.5s ease;
  }

  .zoom:hover {
    transform: scale(1.1);
  }
</style>
