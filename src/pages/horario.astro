---
import Footer from "@/components/Footer.astro";
import Layout from "@/layouts/Layout.astro";
import Navbar from "@components/NavBar.astro";
---

<Layout title="Siam May Xerez | Gimnasio de Muay Thai en Jerez">
  <Navbar />
  <div
    class="h-screen mx-auto p-4 flex flex-col items-center bg-[url('/flag-thailand.jpg')] bg-cover bg-center"
  >
    <h1 class="text-xl py-10">Horario de Clases</h1>
    <div class="flex justify-center w-full">
      <table
        class="table-auto border-collapse border border-gray-400 shadow-lg hidden md:table"
      >
        <thead class="bg-gray-200">
          <tr>
            <th class="px-4 py-2"></th>
            <th class="border border-gray-300 px-4 py-2">Lunes</th>
            <th class="border border-gray-300 px-4 py-2">Martes</th>
            <th class="border border-gray-300 px-4 py-2">Miércoles</th>
            <th class="border border-gray-300 px-4 py-2">Jueves</th>
            <th class="border border-gray-300 px-4 py-2">Viernes</th>
          </tr>
        </thead>
        <tbody>
          <tr class="bg-white">
            <td class="border border-gray-300 px-4 py-2">10:00 - 11:30</td>
            <td class="border border-gray-300 px-4 py-2">Muay Thai</td>
            <td class="border border-gray-300 px-4 py-2"></td>
            <td class="border border-gray-300 px-4 py-2">Muay Thai</td>
            <td class="border border-gray-300 px-4 py-2"></td>
            <td class="border border-gray-300 px-4 py-2">Muay Thai</td>
          </tr>
          <tr class="bg-white">
            <td class="border border-gray-300 px-4 py-2">17:00 - 18:00</td>
            <td class="border border-gray-300 px-4 py-2">Muay Thai Infantil</td>
            <td class="border border-gray-300 px-4 py-2"></td>
            <td class="border border-gray-300 px-4 py-2">Muay Thai Infantil</td>
            <td class="border border-gray-300 px-4 py-2"></td>
            <td class="border border-gray-300 px-4 py-2">Muay Thai Infantil</td>
          </tr>
          <tr class="bg-white">
            <td class="border border-gray-300 px-4 py-2">18:00 - 19:00</td>
            <td class="border border-gray-300 px-4 py-2">Muay Thai</td>
            <td class="border border-gray-300 px-4 py-2"></td>
            <td class="border border-gray-300 px-4 py-2">Muay Thai</td>
            <td class="border border-gray-300 px-4 py-2"></td>
            <td class="border border-gray-300 px-4 py-2">Muay Thai</td>
          </tr>
          <tr class="bg-white">
            <td class="border border-gray-300 px-4 py-2">19:00 - 20:00</td>
            <td class="border border-gray-300 px-4 py-2">Muay Thai</td>
            <td class="border border-gray-300 px-4 py-2"></td>
            <td class="border border-gray-300 px-4 py-2">Muay Thai</td>
            <td class="border border-gray-300 px-4 py-2"></td>
            <td class="border border-gray-300 px-4 py-2">Muay Thai</td>
          </tr>
          <tr class="bg-white">
            <td class="border border-gray-300 px-4 py-2">20:00 - 21:00</td>
            <td class="border border-gray-300 px-4 py-2">Muay Thai</td>
            <td class="border border-gray-300 px-4 py-2"></td>
            <td class="border border-gray-300 px-4 py-2">Muay Thai</td>
            <td class="border border-gray-300 px-4 py-2"></td>
            <td class="border border-gray-300 px-4 py-2">Muay Thai</td>
          </tr>
          <tr class="bg-white">
            <td class="border border-gray-300 px-4 py-2">20:45 - 21:45</td>
            <td class="border border-gray-300 px-4 py-2"></td>
            <td class="border border-gray-300 px-4 py-2">MMA</td>
            <td class="border border-gray-300 px-4 py-2"></td>
            <td class="border border-gray-300 px-4 py-2">MMA</td>
            <td class="border border-gray-300 px-4 py-2"></td>
          </tr>
        </tbody>
      </table>

      <table
        class="table-auto border-collapse border border-gray-400 shadow-lg mt-8 md:hidden"
      >
        <thead class="bg-gray-200">
          <tr>
            <th class="border border-gray-300 bg-gray-400 px-4 py-2">Día</th>
            <th class="border border-gray-300 px-4 py-2">Clase</th>
            <th class="border border-gray-300 px-4 py-2">Horario</th>
          </tr>
        </thead>
        <tbody>
          <tr class="bg-white">
            <td class="border border-gray-300 px-4 py-2"
              >Lunes, Miércoles, Viernes</td
            >
            <td class="border border-gray-300 px-4 py-2">Muay Thai</td>
            <td class="border border-gray-300 px-4 py-2">10:00 - 11:30 / 18:00 - 22:00 <br> 1h x clase
            </td>
            
          </tr>
          <tr class="bg-white">
            <td class="border border-gray-300 px-4 py-2"
              >Lunes, Miércoles, Viernes</td
            >
            <td class="border border-gray-300 px-4 py-2">Muay Thai Infantil</td>
            <td class="border border-gray-300 px-4 py-2">17:00 - 18:00</td>
          </tr>
          <tr class="bg-white">
            <td class="border border-gray-300 px-4 py-2">Martes y Jueves</td>
            <td class="border border-gray-300 px-4 py-2">MMA</td>
            <td class="border border-gray-300 px-4 py-2">20:45 - 21:45</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <Footer />
</Layout>
