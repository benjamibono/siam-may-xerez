---
import Layout from "@/layouts/Layout.astro";
import Navbar from "@components/NavBar.astro";
import Footer from "@components/Footer.astro";
import { Image } from "astro:assets";
import grimaldi from "../images/grimaldi.webp";
import rainer from "../images/rainer.webp";
import cristobal from "../images/cristobal.webp";
import medel from "../images/medel.webp";
import daniel from "../images/daniel.webp";

import user from "../images/user.webp";

const luchadores = [
  {
    nombre: "Alvaro 'La Bestia' Grimaldi",
    peso: "Peso Wélter",
    foto: grimaldi,
  },
  {
    nombre: "Gonzalo 'Boneless' Rainer",
    peso: "Peso Ligero",
    foto: rainer,
  },
  {
    nombre: "Cristóbal 'Ardilla' López",
    peso: "Peso Ligero",
    foto: cristobal,
  },
  {
    nombre: "Juan Manuel 'El Romano'  Medel",
    peso: "Peso Wélter",
    foto: medel,
  },
  { nombre: "Daniel 'El Cazador' Romero", peso: "Peso Wélter", foto: daniel },
  { nombre: "Nombre 'Apodo' Apellido", peso: "Peso ?", foto: user },
  { nombre: "Nombre 'Apodo' Apellido", peso: "Peso ?", foto: user },
  { nombre: "Nombre 'Apodo' Apellido", peso: "Peso ?", foto: user },
];
---

<Layout title="Siam May Xerez | Gimnasio de Muay Thai y MMA en Jerez">
  <Navbar />

  <section class="p-5">
    <div class="grid grid-cols-1 xs:grid-cols-2 lg:grid-cols-4 gap-5">
      {
        luchadores.map((luchador) => (
          <div class="border border-gray-300 rounded-lg p-2 text-center flex flex-col justify-between">
            <div class="overflow-hidden rounded-lg aspect-[3/4] w-full">
              <Image
                src={luchador.foto}
                alt={luchador.nombre}
                width={300}
                height={400}
                format="webp"
                quality={80}
                class="zoom w-full h-full object-cover object-top"
              />
            </div>
            <div class="mt-2">
              <h3 class="text-lg font-semibold">{luchador.nombre}</h3>
              <p class="text-gray-600">{luchador.peso}</p>
            </div>
          </div>
        ))
      }
    </div>
  </section>
  <Footer />
</Layout>

<style>
  img {
    filter: drop-shadow(0 0 10px rgba(0, 0, 0, 0.8));
  }
  /* 
  img:hover {
    transition: transform 0.3s ease;
    transform: scale(1.1);
  }
  */
  .zoom {
    transition: all 0.5s ease;
  }

  .zoom:hover {
    transform: scale(1.1);
  }
</style>
